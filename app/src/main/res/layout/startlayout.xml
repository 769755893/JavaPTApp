<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xx3">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pintu"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/id_level"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="-220dp"
            android:layout_toStartOf="@+id/PauseBtn"
            android:background="@android:color/holo_red_dark"
            android:backgroundTint="@android:color/holo_red_dark"
            android:gravity="center"
            android:padding="4dp"
            android:text="LEVEL:1"
            android:textColor="@android:color/background_light"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/id_time"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:padding="4dp"
            android:text="120"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ExitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="78dp"
            android:layout_toStartOf="@+id/id_time"
            android:background="@android:color/holo_red_dark"
            android:text="Exit"
            android:textColor="@android:color/background_light" />

    </RelativeLayout>

    <myapp.example.myfinalproject.MyGamesLayout
        android:id="@+id/pintu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:padding="3dp">

    </myapp.example.myfinalproject.MyGamesLayout>

    <Button
        android:id="@+id/StartBtn"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="221dp"
        android:background="@android:color/holo_red_dark"
        android:text="Start/Continue Game"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/PauseBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:background="@android:color/holo_red_dark"
        android:text="Pause Game"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/ReStartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/PauseBtn"
        android:background="@android:color/holo_red_dark"
        android:text="RESTART"
        android:textColor="@android:color/background_light" />

</RelativeLayout>