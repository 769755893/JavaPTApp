<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0fcff"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff44cef6">

        <TextClock
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/gy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/imagebtn_selector2"
            android:cropToPadding="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#00000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/user_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="#00000000"
                android:gravity="center" />

            <ImageView
                android:id="@+id/pass_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/user_logo"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:gravity="center" />

            <AutoCompleteTextView
                android:id="@+id/username"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:hint="请输入用户名" />

            <AutoCompleteTextView
                android:id="@+id/userpass"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:inputType="textVisiblePassword"
                android:hint="请输入密码" />

            <Button
                android:id="@+id/eye_login_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/eye_invisble_selector" />
        </RelativeLayout>


        <ImageButton
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/imagebtn_selector" />

        <ImageButton
            android:id="@+id/exit_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/imagebtn_selector" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/forget_pass_btn"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/imagebtn_selector"
                android:text="忘记密码"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/sign_btn"
                android:background="#00000000"
                android:text="还未注册?"
                android:textColor="#ff000000"
                android:textSize="5sp" />

            <Button
                android:id="@+id/sign_btn"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/imagebtn_selector"
                android:text="快速注册"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>


